<article class="post">
  <div class="card">
    <h5 class="card-header bg-primary">Blog Post</h5>
    <div class="card-body bg-dark">
      <h5 class="card-title text-light">{{title}}</h5>
      <div class="meta">
        {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
      <p class="card-text text-light">{{post_url}}</p>
      <a href="/dashboard/edit/{{post.id}}" class="btn btn-primary">Edit</a>
    </div>
  </div>
</article>