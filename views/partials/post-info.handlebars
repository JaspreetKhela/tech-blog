<article class="post">
  <div class="card">
    <h5 class="card-header">Blog Post</h5>
    <div class="card-body">
      <h5 class="card-title title">{{title}}</h5>
      <div class="meta">
        {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
      <p class="card-text">{{post_url}}</p>
    </div>
  </div>
</article>